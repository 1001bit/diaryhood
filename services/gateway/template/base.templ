package template

templ nav(title string) {
	<div id="navbar">
		<a href="/" class="left left-long"><h2>pathgoer</h2></a>
		<a href="/" class="left left-short"><h2>pg</h2></a>
		<h2 class="center" id="title">{ title }</h2>
		<a href="/user" class="right"><h2>you</h2></a>
	</div>
}

templ baseHead(title string) {
	<meta charset="UTF-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<link rel="stylesheet" href="/static/global/style.css"/>
	<title>{ title }</title>
}
